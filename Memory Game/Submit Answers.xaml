<Window x:Class="Memory_Game.Submit_Answers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Game"
        mc:Ignorable="d"
        Title="Submit_Answers" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.ColumnSpan="2" Content="Button" HorizontalAlignment="Left" Margin="106,239,0,0" VerticalAlignment="Top" Width="74"/>
        <DataGrid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="210" Margin="10,10,0,0" VerticalAlignment="Top" Width="262">
            <DataGridTextColumn Header="ID" Binding="{Binding wordCount}"/>
        </DataGrid>


    </Grid>
</Window>
